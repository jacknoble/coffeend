<div class="col-xs-6 col-xs-offset-1">
<h2 class="coffeend-heading">New Coffee Date</h3>
<form action="api/hangouts/" method="post">

  <div class="form-group">
  <input class="form-control" placeholder="Coffee Shop" type="text" name="hangout[location_name]" id="hangout_location_name">
  </div>

  <div class="form-group">
    <div class='input-group date' style="width: 200px" id='dtpicker1'>
        <input type='text' placeholder="Date and start time" class="form-control"name="hangout[start]"
    id="hangout_start" />
        <span class="input-group-addon"><span class="glyphicon glyphicon-calendar"></span>
        </span>
    </div>
  </div>

  <div class="form-group">
    <input type="number" placeholder="Duration" class="form-control" id="hangout_duration" style="width: 100px;" name="hangout[duration]" min="1" max="8">
  </div>

  <div class="form-group">
    <input type="hidden" id="hangout_lat" value="nil" name="hangout[lat]">
    <input type="hidden" id="hangout_lng" value="nil" name="hangout[lng]">
    <input class="btn btn-primary" class="form-control" style="background: brown" type="submit" id="submit" value="Create Coffee Date">
  </div>

</form>

</div>