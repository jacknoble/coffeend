<%
  var start = new Date(Date.parse(hangout.get('start')));
  var end = new Date(Date.parse(hangout.get('end')));
  var end_time = end.toLocaleTimeString();
  var start_time = start.toLocaleTimeString();
  var current_time = new Date();
  start_time = start_time.slice(0, start_time.length - 6);
  end_time = end_time.slice(0, end_time.length - 6);

%>
	<div class="row">
    <div class="col-xs-offset-1 col-xs-12 cof-hangout-show-bottom">
      <div class="col-xs-4">
        <div class="hangout-block">
          <h2 class="coffeend-heading"> When: </h2><span style="margin-left: 20px" class="cof-text"><%= start_time%> to <%= end_time%></span>
        </div>
        <div class="hangout-block">
          <h2 class="coffeend-heading"> Where: </h2><span style="margin-left: 20px" class="cof-text"><%= hangout.escape('location_name') %>
        </div>
      </div>
      <div class="col-xs-4">
        <h2 class="coffeend-heading"> Who: </h2>
        <span style="margin-left: 20px" class="cof-text">
          <%hangout.get('attending_users').forEach(function(user){ %>
            <a style="padding: 1px;" href="<%= '#users/' + user.id%>"><img src=<%=Coffeend.users.get(user.id).escape('small_photo') %>></a>
       <% }) %>
        </span>
        <h2 class="coffeend-heading"> What: </h2><span style="margin-left: 20px" class="cof-text"><%=hangout.escape('description')%></span> 
      </div>
      <div class="col-xs-3">
        <button class="btn" style="background-color: #3d2308; color: #e95600; font-family: SketchRockwell; font-size: 16px; margin-left: -10px;" id="hangout_attend" data-id="<%= hangout.id %>">Go!</button>
      </div>	
    </div>
	</div> 

