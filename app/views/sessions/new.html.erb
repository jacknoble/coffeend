<div class="row">
	<div class="col-xs-3 col-xs-offset-1">
		<form action="/session" method="post" class="cof-text">
		<div class="form-group">
			<input
				type="hidden"
				name="authenticity_token"
				value="<%=form_authenticity_token%>"
				class="form-control" 
			>
			<input type="email" name="user[email]" id="user_email" class="form-control" placeholder="Email">
			<br>
			<input type="password" name="user[password]" class="form-control" placeholder="Password">
				<%[*flash[:errors]].each do |error|%>
					<p style="color: #7A0000;"><%=error%></p>
				<%end%>
			<br>
			<input type="submit" class="btn coffeend-btn form-control" value="Login">
		</div>
		</form>
	</div>
	<div class="col-xs-5 col-xs-offset-2">
		<form action="/session" method="POST">
		  <input type="hidden" name="authenticity_token" 
		    value="<%= form_authenticity_token %>">
		  <input type="hidden" name="user[email]" value="guest@guest.com">
		  <input type="hidden" name="user[password]" value="password">
		  <input type="submit" class="btn coffeend-btn" value="Login as Guest">
		</form>
		<br>
		<a class="cof-text" href="/users/new">...or create a new account.</a> 
	</div>
</div>

